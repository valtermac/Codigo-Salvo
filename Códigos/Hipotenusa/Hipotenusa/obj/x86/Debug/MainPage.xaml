<Page
    x:Class="Hipotenusa.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hipotenusa"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >



    <Grid Background="#FF374140" Opacity="0.9">
        <StackPanel>
            <TextBlock Text="Cálculo da Hipotenusa" FontSize="30" TextAlignment="Center" FontFamily="MV Boli" FontWeight="Bold" Foreground="#FFF3FFE2" />

            <Image Margin="0,50,0,0" 
                   Height="200" 
                   Width="250" 
                   HorizontalAlignment="Center" Source="Assets/Imagens/Hipotenusa.jpg"/>
            <TextBlock
                Width="160"
                Height="30"
                Text="Valor de A:"
                HorizontalAlignment="Left"
                Margin="15,20,0,0"
                FontSize="20"
                FontFamily="MV Boli" 
                TextAlignment="Center" 
                FontWeight="Bold"
                />
            <TextBox x:ConnectionId='1'  
            	x:Name="valorA"
            	HorizontalAlignment="Left" 
            	Width="130" 
            	Height="30"                      
            	FontSize="14"
            	Margin="30,0,0,0" 
            	BorderBrush="#FF0C0D0F" 
            	Foreground="#FFF7EEEE" 
            	TextAlignment="Center" 
            	Background="#FF326546" BorderThickness="4"/>
            <TextBlock 
                Width="160"
                Height="30"
                Text="Valor de B:"
                HorizontalAlignment="Right"
                FontSize="20"
                FontFamily="MV Boli"
                TextAlignment="Center"
                FontWeight="Bold"
                Margin="0,-30,15,0"/>

            <TextBox x:ConnectionId='2'  
                x:Name="valorB"
                      HorizontalAlignment="Right" 
                      Width="130" 
                      Height="30"                      
                      FontSize="14"
                      Margin="0,-30,30,0" 
                      Background="#FF2EAC56" 
                      BorderBrush="#FF0E0D0D" 
                TextAlignment="Center" 
                Foreground="#FFFDFDFD" BorderThickness="4"/>
            <TextBlock x:ConnectionId='3'
                x:Name="resultado"
                Text=""
                FontSize="18"
                Width="250"
                Height="30"
                Margin="0,100,0,0" 
                Foreground="#FFF3ECEC"/>
            <Button x:ConnectionId='4'
                Content="Calcular"
                FontSize="22"
                Width="320"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,40,0,0" 
                                        BorderBrush="DarkGray" Background="#FFDC3522" RenderTransformOrigin="0.5,0.5"
                >
                <Button.RenderTransform>
                    <CompositeTransform SkewX="40"/>
                </Button.RenderTransform>
            </Button>


        </StackPanel>
    </Grid>


</Page>

